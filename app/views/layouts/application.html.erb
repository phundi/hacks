          <li><a href="/user/index">User Management</a></li>
          <li><a href="/site/index">Configurations</a></li>
        </ul>
      </li>
      <li><a href="/">Home</a></li>
    </ul>

    <div class="navbar-brand nb2" style="font-size: 1.9em;">Hackstore</div>
  </div>
  <div class="navbar-collapse collapse navbar-responsive-collapse">


    <ul class="nav navbar-nav navbar-left">
      <li><a href="/user/logout">logout
        <i style="color: darkslateblue;">(<%= User.find(session[:user_id]).username rescue "admin" %>)</i></a></li>
    </ul>

  </div>
</div>
</div>
<%= yield %>

<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/bootstrap.js"></script>
