  <title>Hackstore</title>

  <script type="text/javascript">

  </script>
  <style>

      .nb2 {
          font-weight: normal !important;
          text-shadow: 2px 0px 0px gray;
      }

      a {
          font-size: 1.2em !important;
          color: black !important;
      }

      #s input:focus{
          box-shadow: 0 0 5px rgba(81, 203, 238, 1);
      }
      #s input{
          width: 179px !important;
          font-size: 1.1em;
      }

  </style>

  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" media="screen"/>
  <link rel="stylesheet" type="text/css" href="/stylesheets/bootswatch.css"/>
</head>

<body style="padding-top: 0px !important">
<div class="navbar navbar-default">
  <div class="navbar-header navbar-right">

    <ul class="nav navbar-nav">
      <li style="padding-top: 13px">
        <form class="form-search" method="get" id="s" action="/">
          <div class="input-append">
            <input type="text" class="input-medium search-query" name="s" placeholder="Search hacks" value="">
            <button type="submit" class="add-on btn"><i class="icon-search"></i></button>
          </div>
        </form>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
